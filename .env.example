# Toggl Track API
TOGGL_API_TOKEN=your_toggl_api_token
TOGGL_WORKSPACE_ID=your_workspace_id
TOGGL_PROJECT_ID=optional_default_project_id

# Azure SQL Database
# Uses ActiveDirectoryDefault authentication:
# - In Azure App Service: uses managed identity
# - Locally: uses Azure CLI credentials (run `az login` first)
DATABASE_URL="sqlserver://your-server.database.windows.net:1433;database=invoice-hub;authentication=ActiveDirectoryDefault;trustServerCertificate=true"

# Azure Blob Storage (for PDF persistence)
AZURE_STORAGE_CONNECTION_STRING="DefaultEndpointsProtocol=https;AccountName=your-account;AccountKey=your-key;EndpointSuffix=core.windows.net"
AZURE_STORAGE_CONTAINER="timesheets"

# JWT Secret (for client portal tokens)
JWT_SECRET="your-secret-key-min-32-chars-recommended"
